<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleActivityStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--todo complete this from activity_main.xml-->
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_searchview_rounded</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewTheme</item>
    </style>

    <style name="AutoCompleteTextViewTheme">
        <item name="android:editTextColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorError</item>
    </style>
</resources>
