<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoTitleActivityStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_searchview_rounded</item>
    </style>

    <style name="SeekBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorAccent</item>
        <item name="android:colorControlHighlight">@color/colorAccent</item>
        <item name="android:progressTint">@color/colorAccent</item>
        <item name="android:colorControlNormal">@color/colorItemBackground</item>
        <item name="android:progressBackgroundTint">@color/colorItemBackground</item>
    </style>

</resources>
