<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="8dp"
              android:paddingBottom="8dp"
              android:background="@color/colorBackground">

    <ImageView android:src="@drawable/ic_headset_white_24dp"
               android:layout_marginStart="25dp"
               android:layout_marginEnd="0dp"
               android:layout_width="24dp"
               android:layout_height="24dp"/>

    <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView android:id="@+id/play_pause_player_btn"
                   android:src="@drawable/ic_pause_white_24dp"
                   android:layout_width="24dp"
                   android:layout_height="24dp"/>

        <ImageView android:id="@+id/stop_player_btn"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="0dp"
                   android:src="@drawable/ic_stop_accent_24dp"
                   android:layout_width="24dp"
                   android:layout_height="24dp"/>

        <ImageView android:id="@+id/replay_player_btn"
                   android:layout_marginStart="25dp"
                   android:layout_marginEnd="0dp"
                   android:src="@drawable/ic_replay_white_24dp"
                   android:layout_width="24dp"
                   android:layout_height="24dp"/>
    </LinearLayout>

    <ImageView android:id="@+id/kill_player_btn"
               android:layout_alignParentEnd="true"
               android:layout_marginStart="0dp"
               android:layout_marginEnd="20dp"
               android:src="@drawable/ic_close_white_24dp"
               android:layout_width="24dp"
               android:layout_height="24dp"/>
</RelativeLayout>